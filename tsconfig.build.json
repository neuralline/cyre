{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "composite": false,
    "noEmit": false,
    "skipLibCheck": true,
    "stripInternal": true,
    "removeComments": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "test/**/*",
    "examples/**/*",
    "dist/**/*",
    "node_modules/**/*"
  ]
}
