{
  "name": "cyre",
  "version": "4.0.0",
  "description": "Reactive and dynamic networking system with quantum-timed event orchestration, intelligent load balancing, and advanced state management for JavaScript applications",
  "input": "src/index.ts",
  "scripts": {
    "dev": "vite build --watch",
    "build": "rimraf dist && vite build && tsc --emitDeclarationOnly --skipLibCheck --noImplicitAny false",
    "build:types": "tsc --project tsconfig.build.json",
    "build:lib": "vite build",
    "build:full": "npm run build:lib && npm run build:types",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint --ext .ts,.tsx src",
    "lint:fix": "eslint --ext .ts,.tsx src --fix",
    "type-check": "tsc --noEmit --skipLibCheck",
    "prepublishOnly": "npm run test",
    "version": "npm run build:full && git add -A dist",
    "postversion": "git push && git push --tags",
    "publish:github": "npm publish --registry=https://npm.pkg.github.com --scope=@neuralline",
    "clean": "rimraf dist coverage .vite",
    "example": "tsx examples/basic-usage.ts"
  },
  "author": "Darik.",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neuralline/cyre.git"
  },
  "homepage": "https://github.com/neuralline/cyre#readme",
  "bugs": {
    "url": "https://github.com/neuralline/cyre/issues"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/node": "^22.15.18",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/coverage-v8": "3.1.3",
    "eslint": "^9.27.0",
    "rimraf": "^6.0.1",
    "terser": "^5.39.2",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.1.3"
  },
  "keywords": [
    "pub/sub",
    "publish/subscribe",
    "reactive",
    "subscribe",
    "event manager",
    "event",
    "action-on-call",
    "reducers",
    "debounce",
    "redux alternative"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.esm.js",
  "browser": "./dist/index.umd.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "docs",
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/index.esm.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/index.cjs"
      },
      "browser": {
        "import": "./dist/index.esm.js",
        "require": "./dist/index.cjs",
        "default": "./dist/index.umd.js"
      },
      "node": {
        "import": "./dist/index.esm.js",
        "require": "./dist/index.cjs"
      },
      "default": "./dist/index.esm.js"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.11.0"
}
