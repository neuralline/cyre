{
  "name": "cyre",
  "version": "4.3.0",
  "description": "Neural Line - Reactive event manager with zero dependencies",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks/index.js",
      "types": "./dist/hooks/index.d.ts"
    },
    "./schema": {
      "import": "./dist/schema/index.js",
      "types": "./dist/schema/index.d.ts"
    },
    "./stream": {
      "import": "./dist/stream/index.js",
      "types": "./dist/stream/index.d.ts"
    },
    "./state-machine": {
      "import": "./dist/state-machine/index.js",
      "types": "./dist/state-machine/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run build --watch",
    "build": "bun run clean && bun run build:types && bun run build:esm && bun run build:cjs",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build:esm": "bun build ./src/index.ts --outdir ./dist --format esm --splitting --chunk-naming '[name]-[hash].js'",
    "build:cjs": "bun build ./src/index.ts --outfile ./dist/index.cjs --format cjs",
    "clean": "rm -rf dist",
    "test": "bun test",
    "vitest": "vitest run",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "bun run typecheck",
    "prepublishOnly": "bun run build && bun run test",
    "size": "bun run build && bundlesize",
    "benchmark": "bun run example/industry-standard-tests.ts"
  },
  "keywords": [
    "reactive",
    "events",
    "state-management",
    "functional",
    "typescript",
    "zero-dependency",
    "performance"
  ],
  "author": "Cyre Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neuralline/cyre.git"
  },
  "homepage": "https://github.com/neuralline/cyre#readme",
  "bugs": {
    "url": "https://github.com/neuralline/cyre/issues"
  },
  "devDependencies": {
    "@jest/globals": "30.0.0-beta.3",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/node": "^22.15.29",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitest/coverage-v8": "^3.1.4",
    "eslint": "^9.28.0",
    "rimraf": "^6.0.1",
    "rollup-plugin-dts": "^6.2.1",
    "terser": "^5.40.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsx": "^4.19.4",
    "vite": "^6.3.5",
    "vitest": "^3.1.4",
    "typescript": "^5.8.3",
    "@types/bun": "latest",
    "bundlesize": "^0.18.2"
  },
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "50kb"
    }
  ],
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "sideEffects": false
}
